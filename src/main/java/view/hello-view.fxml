      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Slider>
   <Slider fx:id="rudder" blockIncrement="0.1" max="1.0" min="-1.0" prefHeight="14.0" prefWidth="252.0" />
    <Button onAction="#funcName" text="Click here!" />
</VBox>
